{% extends create == 'true' ? 'BookBundle:Default:create.html.twig' : 'BookBundle:Default:update.html.twig' %}

{% if create == 'false' %}
    {% block book_id %}{{ book.id }}{% endblock %}
{% endif %}

{% block form %}

    {{ form_start(form, { 'attr': {'class': 'form-horizontal'}}) }}

        {{ form_errors(form) }}
        <div class="form-group">
            <div class="col-xs-12 col-sm-10 col-md-7 col-lg-7">
                {{ form_label(form.title, 'Title', { 'attr': {'label_attr': 'control-label'}}) }}
                {{ form_widget(form.title, { 'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_errors(form.title) }}
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-sm-10 col-md-7 col-lg-7">
                {{ form_label(form.description, 'Description', { 'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.description, { 'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_errors(form.description) }}
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-sm-10 col-md-7 col-lg-7">
                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-success'}}) }}
            </div>
        </div>
    {{ form_end(form) }}

{% endblock %}